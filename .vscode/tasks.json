{
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "label": "C/C++: gcc-9 build active file",
        "command": "/bin/gcc-9",
        "args": [
            "-g",
            "${fileDirname}/plymouth-lite.c",
            "${fileDirname}/ply-image.c",
            "${fileDirname}/ply-frame-buffer.c",
            "${fileDirname}/ply-console.c",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}",
            "-lpng16",
            "-lm",
            "-lz",
            "-I/usr/include",
            "-L/usr/lib"
        ],
        "options": {
            "cwd": "/usr/bin"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}